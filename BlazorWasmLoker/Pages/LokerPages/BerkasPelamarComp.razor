@page "/berkasPelamar"

@inherits BerkasPelamarCompBase

<div class="container-lg">
    <div class="row justify-content-md-center">
        <div class="col-md-7">
            <div class="judul-pertanyaan">
                <h2>Upload File</h2>
                <p>Harap upload file !</p>
            </div>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-7">
            <div class="form-foto">
                <h4>Silahkan Upload Foto Anda!</h4>
                <p>Format Extends: <span>.jpg .jpeg .png </span></p>
                <div id="DropZoneFoto" class="uploadForm">
                    <i class="fas fa-file-upload fa-2x"></i>
                    <span class="mt-3 mb-3">Drag and Drop File Here</span>
                    <button id="ClickZoneFoto" class="btn btn-create">Select File</button>
                </div>
                <DxUpload Name="FileGambar"
                          UploadUrl="@GetUploadUrl(urlApi)"
                          FileUploadStart="@OnFileUploadStart"
                          SelectedFilesChanged="SelectedFilesChanged"
                          AllowedFileExtensions="@(new List<string> { ".jpg", ".jpeg", ".png" })"
                          ExternalDropZoneCssSelector="#DropZoneFoto"
                          ExternalSelectButtonCssSelector="#ClickZoneFoto"
                          ShowSelectButton="false"
                          ExternalDropZoneDragOverCssClass="custom-drag-over text-white"
                          FileUploaded="UploadSukses">
                </DxUpload>
            </div>
        </div>
    </div>
    <div class="row mt-4 justify-content-md-center ">
        <div class="col-md-7">
            <div class="form-foto">
                <h4>Silahkan Upload Cv Anda!</h4>
                <p>Format Extends: <span>.pdf</span></p>
                <div id="DropZoneCv" class="uploadForm">
                    <i class="fas fa-file-upload fa-2x"></i>
                    <span class="mt-3 mb-3">Drag and Drop File Here</span>
                    <button id="ClickZoneCv" class="btn btn-create">Select File</button>
                </div>
                <DxUpload Name="FileGambar"
                          UploadUrl="@GetUploadUrl(urlApiCv)"
                          FileUploadStart="@OnFileUploadStartCv"
                          SelectedFilesChanged="SelectedFilesChangedCv"
                          AllowedFileExtensions="@(new List<string> { ".pdf" })"
                          ExternalDropZoneCssSelector="#DropZoneCv"
                          ExternalSelectButtonCssSelector="#ClickZoneCv"
                          ShowSelectButton="false"
                          ExternalDropZoneDragOverCssClass="custom-drag-over text-white"
                          FileUploaded="UploadSukses">
                </DxUpload>
            </div>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-7">
            <div class="d-grid gap-2 mt-5 mb-5">
                <button class="btn btn-create" type="button" @onclick="goPengalaman">
                    @*<span *ngIf="spin" class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>*@
                    Kirim File
                </button>
            </div>
        </div>
    </div>
</div>
