
@inherits LokerCompBase

<div class="container py-4">
    <div class="row text-center">
        <div class="col-lg-12">
            <h3>Loker</h3>
        </div>
    </div>
    <div class="row loker">
        <div class="col-lg-12">
            @if (lokers.Count != 0)
            {
                @foreach (var item in lokers)
                {
                    <div class="row d-flex align-items-center mt-5 loker-list">
                        <div class="col-lg-2 loker-judul text-center">
                            <p>@item.JudulLowongan</p>
                        </div>
                        <div class="col-lg-8 loker-keterangan">
                            <p>@item.Keterangan</p>
                        </div>
                        <div class="col-lg-2 loker-btn text-center">
                            <button class="btn btn-create" @onclick="@(x => RouteKriteria(item.Id) )">
                                Daftar
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
        <div class="text-center mt-4">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
            }
        </div>
        <p>@ErrorMessage</p>

    </div>
</div>



